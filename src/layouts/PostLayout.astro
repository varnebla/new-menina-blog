---
import BaseLayout from './BaseLayout.astro';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  date: string;
  topic: string;
  imagen: string;
}
const { title, date, topic, imagen } = Astro.props;
---

<BaseLayout>
  <section class="max-w-[60ch] mx-auto pt-4 mb-16">
    <div class="flex flex-col gap-y-4 mb-6">
      <a
        href={`/topic/${topic}`}
        class="text-sm w-max uppercase text-gold-700 hover:underline pl-1"
        >{topic}</a
      >
      <h1 class="font-bold text-5xl text-pearl-900">{title}</h1>
      <p class="text-sm text-pearl-700">{date}</p>
      <Image
        src={imagen}
        alt={title}
        width={680}
        height={380}
        class="aspect-video rounded"
      />
    </div>
    <article
      class="prose prose-pearl prose-base lg:prose-lg font-serif max-w-none prose-headings:font-dm-sans prose-headings:font-bold prose-img:max-w-lg prose-img:mx-auto prose-img:rounded prose-img:w-full [&_strong]:font-bold [&_img+em]:text-center [&_img+em]:block [&_a]:underline"
    >
      <slot />
    </article>
  </section>
</BaseLayout>

---
import TheNavigationBar from '../components/TheNavigationBar.astro';
import TheFooter from '../components/TheFooter.astro';
import { ViewTransitions } from 'astro:transitions';

// Supports weights 400-700
import '@fontsource-variable/lora';
import '@fontsource/geist-sans/400.css';
import '@fontsource/geist-sans/500.css';
import '@fontsource/geist-sans/700.css';

const { pageTitle, pageDescription, layout = 'BaseLayout' } = Astro.props;
---

<html lang="es" class="min-h-screen">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image" href="/favicon-menina.jpg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={pageDescription} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://lameninaperdida.art" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Para que veas el arte con otros ojos | La menina perdida"
    />
    <meta
      property="og:description"
      content="Espacio donde descubrimos secretos y curiosidades tras las obras de arte, curiosidades y objetos artísticos escondidos en las películas Disney y os hablo de mis viajes y de mis experiencias en visitas culturales. Proyecto que llevo a cabo con el objetivo de hacer el arte accesible a todos los públicos mediante un lenguaje comprensible."
    />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/images/8330f603-c8b4-4c61-bdf6-b2c4cd5a4704.jpg?token=YDl5emfgT4wpKezqhvlW747glLR2qjQvXUCXxQ1LdG4&height=1449&width=1200&expires=33259224249"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="lameninaperdida.art" />
    <meta property="twitter:url" content="https://lameninaperdida.art" />
    <meta
      name="twitter:title"
      content="Para que veas el arte con otros ojos | La menina perdida"
    />
    <meta
      name="twitter:description"
      content="Espacio donde descubrimos secretos y curiosidades tras las obras de arte, curiosidades y objetos artísticos escondidos en las películas Disney y os hablo de mis viajes y de mis experiencias en visitas culturales. Proyecto que llevo a cabo con el objetivo de hacer el arte accesible a todos los públicos mediante un lenguaje comprensible. Muestro las obras de arte desde el punto de vista de las curiosidades y leyendas que encierran. Verás el arte con otros ojos."
    />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/images/8330f603-c8b4-4c61-bdf6-b2c4cd5a4704.jpg?token=YDl5emfgT4wpKezqhvlW747glLR2qjQvXUCXxQ1LdG4&height=1449&width=1200&expires=33259224249"
    />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->

    <title>{pageTitle} | La menina perdida</title>
    <script
      defer
      src="https://cloud.umami.is/script.js"
      data-website-id="0358d179-2da4-4ec1-9b41-db9369dc12ab"></script>
    <script>
      if (!import.meta.env.PROD) localStorage.setItem('umami.disabled', '1');
    </script>
    <ViewTransitions />
  </head>
  <body
    class="flex flex-col min-h-screen text-lg font-dm-sans relative bg-background"
  >
    <TheNavigationBar />
    <div
      class="post-progress"
      class:list={[layout != 'PostLayout' && 'hidden']}
    >
    </div>
    <main class="px-4 lg:px-0 max-w-4xl mx-auto w-full mb-16 mt-24">
      <slot />
    </main>
    <TheFooter />
  </body>
</html>

<style>
  html {
    scroll-timeline: --page-scroll block;
  }
  .post-progress {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(to right, #c9a66b, #8c5e00);
    z-index: 20;
    transform-origin: 0 50%;
    animation: grow-progress auto linear;
    animation-timeline: --page-scroll;
  }

  @keyframes grow-progress {
    0% {
      transform: scaleX(0);
    }
    100% {
      transform: scaleX(1);
    }
  }
</style>

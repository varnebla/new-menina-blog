---
import TheNavigationBar from '../components/TheNavigationBar.astro';
import TheFooter from '../components/TheFooter.astro';
import SideMenu from '../components/SideMenu.astro';

const { pageTitle } = Astro.props;
---

<html lang="en" class="min-h-screen">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body class="flex flex-col min-h-screen text-lg font-dm-sans relative">
    <TheNavigationBar />
    <main class="px-4 max-w-6xl mx-auto w-full flex flex-col gap-y-12 mb-16">
      <!-- <h1 class="text-4xl font-dm-serif font-bold">{pageTitle}</h1> -->
      <slot />
    </main>
    <SideMenu />
    <TheFooter />
    <script>
      import '../scripts/menu';
    </script>
  </body>
</html>

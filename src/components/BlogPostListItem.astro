---
import PostDate from './PostDate.astro';
const { post, titleClass } = Astro.props;
---

<div class="flex flex-col gap-y-2">
  <a
    href={`/topic/${post.frontmatter.topic}`}
    class="text-secondary capitalize hover:underline"
    >{post.frontmatter.topic}
  </a>
  <a href={post.url} class="group flex flex-col gap-y-2">
    <p
      class:list={[
        'font-dm-serif text-3xl group-hover:underline leading-tight',
        titleClass
      ]}
    >
      {post.frontmatter.title}
    </p>
    <p>{post.frontmatter.description}</p>
    {
      post.frontmatter.releaseDate && (
        <PostDate date={post.frontmatter.releaseDate} />
      )
    }
  </a>
</div>
